<?xml version="1.0" encoding="utf-8"?>
<com.fezrestia.android.webviewwindow.view.WebFrame
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/web_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:theme="@style/MaterialBase"
>
    <!-- Web View -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
            <!-- Navigation Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@color/white"
            >
                <TextView
                    android:id="@+id/nav_bar_url"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/nav_bar_button_height"
                    android:layout_gravity="start"
                    android:gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/nav_bar_url_horizontal_padding"
                    android:paddingEnd="@dimen/nav_bar_url_horizontal_padding"
                    android:textSize="@dimen/nav_bar_url_text_size"
                    android:textColor="@color/dark_gray"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                >
                    <TextView
                        android:id="@+id/nav_bar_back_button"
                        android:layout_width="@dimen/nav_bar_button_width"
                        android:layout_height="@dimen/nav_bar_button_height"
                        android:text="@string/nav_bar_back_button_label"
                        android:textSize="@dimen/nav_bar_button_text_size"
                        android:textColor="@color/dark_gray"
                        android:gravity="center"
                    />
                    <TextView
                        android:id="@+id/nav_bar_fore_button"
                        android:layout_width="@dimen/nav_bar_button_width"
                        android:layout_height="@dimen/nav_bar_button_height"
                        android:text="@string/nav_bar_fore_button_label"
                        android:textSize="@dimen/nav_bar_button_text_size"
                        android:textColor="@color/dark_gray"
                        android:gravity="center"
                    />
                </LinearLayout>
            </LinearLayout>

            <!-- Web -->
            <com.fezrestia.android.webviewwindow.view.ExtendedWebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
            />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/http_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/http_warning_indicator_border"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/http_warning_indicator"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/http_warning_text_size"
                android:paddingLeft="@dimen/http_warning_text_horizontal_padding"
                android:paddingRight="@dimen/http_warning_text_horizontal_padding"
                android:layout_gravity="right|top"
                android:background="@drawable/http_warning_text_border"
                tools:ignore="RtlHardcoded"
            />
        </FrameLayout>

        <!-- Entry View -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/entry_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/entry_view_background"
        >
            <!-- 1st section, URL input field. -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/base_load_url_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="6dp"
            >
                <TextView
                    android:id="@+id/base_load_url_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="4dp"
                    android:text="@string/base_load_url"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                />

                <View
                    android:id="@+id/base_load_url_separator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/base_load_url_label"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/dark_gray"
                />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/base_load_url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/base_load_url_separator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/paste_button"
                    app:errorEnabled="false"
                    app:counterEnabled="false"
                    app:hintEnabled="false"
                    app:helperTextEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:endIconMode="none"
                >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/base_load_url_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:textSize="12sp"
                        android:importantForAutofill="no"
                        android:inputType="textUri"
                        tools:ignore="LabelFor"
                    />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/paste_button"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/base_load_url"
                    app:layout_constraintBottom_toBottomOf="@id/base_load_url"
                    app:layout_constraintStart_toEndOf="@id/base_load_url"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:insetLeft="8dp"
                    android:insetTop="8dp"
                    android:insetRight="0dp"
                    android:insetBottom="4dp"
                    android:text="@string/paste_button_label"
                    android:textSize="12sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/load_url_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/base_load_url"
                    android:text="@string/load_url_button_label"
                    android:textSize="12sp"
                    style="@style/Widget.MaterialComponents.Button"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Footer section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/footer_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="6dp"
            >
                <View
                    android:id="@+id/footer_separator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/dark_gray"
                />
                <TextView
                    android:id="@+id/footer_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <!-- Slider Grip -->
    <FrameLayout
        android:id="@+id/slider_grip_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded"
    >
        <com.fezrestia.android.webviewwindow.view.BlockNavigationImageView
                android:id="@+id/slider_grip"
                android:layout_width="@dimen/grip_width"
                android:layout_height="@dimen/grip_height"
                android:layout_gravity="left|top"
                android:contentDescription="@string/app_name"
        />
        <ImageView
                android:id="@+id/favicon_view"
                android:layout_width="@dimen/favicon_size"
                android:layout_height="@dimen/favicon_size"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
        />
    </FrameLayout>

</com.fezrestia.android.webviewwindow.view.WebFrame>
